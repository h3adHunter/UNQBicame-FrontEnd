<core:View
	controllerName="ar.com.unq.controller.Principal"
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Page
		title="UNQbicame"
		class="sapUiFioriObjectPage">
		<IconTabBar> 
			<items> 
				<IconTabFilter text="Aulas" icon="sap-icon://chalkboard">
					<Table items="{ path: 'aulas>/' }">
						<columns>
							<Column>
								<Text text="Nro. de aula" />
							</Column>
							<Column hAlign="End">
								<Text text="Sector" />
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier
										title="{aulas>nombre}"/>
									<Text
										text="{aulas>sector_nombre}{aulas>sector_piso}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</IconTabFilter>
			</items>
		</IconTabBar>
	</Page>
</core:View>