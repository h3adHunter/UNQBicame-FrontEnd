<core:View
	controllerName="ar.com.unq.controller.Principal"
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Page
		title="UNQbicame"
		class="sapUiFioriObjectPage">
		<IconTabBar> 
			<items> 
				<IconTabFilter text="Cursadas" icon="sap-icon://appointment-2">
					<Table items="{ path: 'cursadas>/' }">
						<columns>
							<Column>
								<Text text="Materia" />
							</Column>
							<Column hAlign="Center">
								<Text text="Aula" />
							</Column>
							<Column hAlign="Center">
								<Text text="Horario" />
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier
										title="{cursadas>materia/nombre}"/>
									<Text
										text="{cursadas>aula/nombre}" />
									<Text
										text="{cursadas>dia} {cursadas>hora_inicio} {cursadas>hora_fin}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</IconTabFilter>
				<IconTabFilter text="Aulas" icon="sap-icon://chalkboard">
					<Table items="{ path: 'aulas>/' }">
						<columns>
							<Column>
								<Text text="Nro. de aula" />
							</Column>
							<Column hAlign="End">
								<Text text="Sector" />
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier
										title="{aulas>nombre}"/>
									<Text
										text="{aulas>sector/nombre} {aulas>sector/piso}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</IconTabFilter>
				<IconTabFilter text="Materias" icon="sap-icon://course-book">
					<Table items="{ path: 'materias>/' }">
						<columns>
							<Column>
								<Text text="Materia" />
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier
										title="{materias>nombre}" text="{materias>numero}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</IconTabFilter>
				<IconTabFilter text="Mapa" icon="sap-icon://map-2">
					<HBox justifyContent="SpaceBetween">
						<Image
							src="resources/sectores.png"
							densityAware="false">
						</Image>
						<Image
							src="resources/mapa.jpg"
							densityAware="false"
							height="800px" >
						</Image>											
					</HBox>
				</IconTabFilter>
			</items>
		</IconTabBar>
	</Page>
</core:View>